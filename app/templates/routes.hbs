<div class="routes">
	<nav class="quicknav">
		<ul>
			{{#shortcuts}}
			<li><a href="{{path}}">{{label}}</a></li>
			{{/shortcuts}}
		</ul>
	</nav>
	<div class="content-inner">
		<nav class="simple-nav">
			<ul>
				{{#routes}}
				<li>
					{{#if shortcuts}}<a name="{{route_short_name}}" class="quicknav-anchor" />{{/if}}
					{{#if is_rail}}
					<a href="{{../../route_type_slug}}/{{slug}}"><strong>{{route_id}}</strong> {{route_long_name}}</a>
					{{else}}
					<a href="{{../../route_type_slug}}/{{slug}}"><strong>{{route_short_name}}</strong> {{route_long_name}}</a>
					{{/if}}
				</li>
				{{/routes}}
			</ul>
		</nav>
	</div>
</div>